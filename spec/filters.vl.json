{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "name": "filters",
  "description": "CacheViz filters",
  "padding": {
    "left": 35,
    "top": 5,
    "right": 5,
    "bottom": 5
  },
  "data": {
    "values": []
  },
  "columns": 1,
  "concat": [
    {
      "width": 400,
      "height": 200,
      "bounds": "full",
      "mark": "bar",
      "selection": {
        "type": {
          "type": "multi",
          "resolve": "global"
        }
      },
      "encoding": {
        "x": {
          "field": "type",
          "type": "ordinal",
          "axis": {
            "labelAlign": "left",
            "labelPadding": -15,
            "title": "Type"
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {
            "title": false
          }
        },
        "color": {
          "condition": {
            "selection": "type"
          },
          "value": "#ccc"
        }
      }
    },
    {
      "width": 400,
      "height": 200,
      "bounds": "full",
      "mark": "bar",
      "selection": {
        "size": {
          "type": "multi",
          "resolve": "global"
        }
      },
      "encoding": {
        "x": {
          "field": "size",
          "type": "ordinal",
          "sort": [
            "micro",
            "small",
            "regular",
            "large",
            "virtual",
            "other",
            "not_chosen"
          ],
          "axis": {
            "labelAlign": "left",
            "labelPadding": -15,
            "title": "Size"
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {
            "title": false
          }
        },
        "color": {
          "condition": {
            "selection": "size"
          },
          "value": "#ccc"
        }
      }
    },
    {
      "width": 400,
      "height": 200,
      "bounds": "full",
      "mark": "bar",
      "selection": {
        "difficulty": {
          "type": "multi",
          "resolve": "global"
        }
      },
      "encoding": {
        "x": {
          "field": "difficulty",
          "type": "ordinal",
          "axis": {
            "labelAlign": "left",
            "labelPadding": -15,
            "title": "Difficulty"
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {
            "title": false
          }
        },
        "color": {
          "condition": {
            "selection": "difficulty"
          },
          "value": "#ccc"
        }
      }
    },
    {
      "width": 400,
      "height": 200,
      "bounds": "full",
      "mark": "bar",
      "selection": {
        "terrain": {
          "type": "multi",
          "resolve": "global"
        }
      },
      "encoding": {
        "x": {
          "field": "terrain",
          "type": "ordinal",
          "axis": {
            "labelAlign": "left",
            "labelPadding": -15,
            "title": "Terrain"
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {
            "title": false
          }
        },
        "color": {
          "condition": {
            "selection": "terrain"
          },
          "value": "#ccc"
        }
      }
    }
  ]
}
