{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "name": "map",
  "description": "CacheViz map",
  "data": {
    "values": []
  },
  "width": 800,
  "height": 800,
  "bounds": "full",
  "selection": {
    "cache": {
      "type": "interval",
      "on": "[mousedown[!event.shiftKey], mouseup] > mousemove",
      "translate": "[mousedown[!event.shiftKey], mouseup] > mousemove"
    },
    "grid": {
      "type": "interval",
      "bind": "scales",
      "zoom": "wheel![event.shiftKey]",
      "on": "[mousedown[event.shiftKey], mouseup] > mousemove",
      "translate": "[mousedown[event.shiftKey], mouseup] > mousemove"
    }
  },
  "mark": {
    "type": "point",
    "size": 50,
    "filled": true
  },
  "encoding": {
    "x": {
      "field": "mx",
      "type": "quantitative",
      "scale": {"domain": [0.25,0.75]},
      "axis": null
    },
    "y": {
      "field": "my",
      "type": "quantitative",
      "scale": {"domain": [0.25,0.75]},
      "axis": null
    },
    "color": {
      "condition": {
        "selection": "cache",
        "field": "value",
        "type": "quantitative",
        "scale": {
          "scheme": "plasma"
        }
      },
      "value": "#ccc"
    },
    "tooltip": [
      {"field": "name", "type": "ordinal"},
      {"field": "wp", "type": "ordinal"},
      {"field": "value", "type": "quantitative"}
    ]
  },
  "config": {
    "legend": {
      "offset": -70,
      "padding": 10
    }
  }
}
