{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "CacheViz map",
  "data": {
    "values": []
  },
  "width": 800,
  "height": 800,
  "selection": {
    "cache": {
      "type": "interval"
    },
    "grid": {
      "type": "interval",
      "bind": "scales",
      "zoom": "wheel![event.shiftKey]",
      "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!"
    }
  },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "scale": {"domain": [0.0,1.0]},
      "axis": null
    },
    "y": {
      "field": "y",
      "type": "quantitative",
      "scale": {"domain": [0.0,1.0]},
      "axis": null
    },
    "color": {
      "condition": {
        "selection": "cache",
        "field": "value",
        "type": "quantitative"
      },
      "value": "gray"
    }
  }
}
